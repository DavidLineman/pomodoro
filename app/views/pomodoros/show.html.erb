

<div id="pomodoro-data" data-id="<%= @pomodoro.id %>" data-duration_in_minutes="<%= @pomodoro.duration_in_minutes %>"  data-started_at="<%= @pomodoro.started_at %>"></div>
<div class="clock">
  <div class="outer-clock-face">
    <div class="marking marking-one"></div>
    <div class="marking marking-two"></div>
    <div class="marking marking-three"></div>
    <div class="marking marking-four"></div>
    <div class="inner-clock-face">
      <div class="hand hour-hand"></div>
      <div class="hand min-hand"></div>
      <div class="hand second-hand"></div>
    </div>
  </div>
</div>



<hr class="below-clock">

<div class="container operation-buttons">
  <button class="waves-effect waves-light btn-small red accent-4 start">Start</button>
  <button class="waves-effect waves-light btn-small red accent-4 pause">Pause</button>
  <button class="waves-effect waves-light btn-small red accent-4 reset">Reset</button>
</div>

<%= simple_form_for finish_index_path(@pomodoro) do |f| %>
  <%= f.button :submit, 'finish_index_path' %>
<% end %>